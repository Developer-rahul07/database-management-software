<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Database Management</title>
    <link href="../assets/admin.css" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body style="background-color:lightblue;">
    <%- include('./public/Navbar.ejs') %>
        <div class="arrow" style="margin-left: 100px; margin-top: 50px;">
            <form action="/allsearch" method="get" style="display: flex; margin: 10px;">
            
            <input type="hidden" id="indexName" name="name" value="<%= indexName %>">
            <button style="background: bottom;
            border: aliceblue;
            color: black;"> <i class="fa fa-arrow-circle-left" style="font-size:24px;"></i></button>
            <!-- <a ><i class="rsfa fa-arrow-circle-left" style="font-size:24px;"></i></a> -->
        </div>
       
            </form>
        </div>


         
                <div class="row">
                <div class="col-4">
                    <br><br>
                    <div class="comment-form" style="display: flex; ">
                        <form action="/pdf/:PDFNAME" method="get" >
                            <div class="input-group">
                                <% row.forEach(function(item){ %>
                                  <input type="text" style="margin-left: 30px; width: 400px;" class="form-control " id="msg" name="msg" value="<%= item.COMMENT %>" placeholder="Add Message">
                                  <% }) %>
                              </div>
                                <input type="hidden" id="SRNO" name="SRNO" value="<%= SRNO %>">
                                <input type="hidden" id="FILENAME" name="FILENAME" value="<%= FILENAME %>">
                                <input type="hidden" id="YEAR" name="YEAR" value="<%= YEAR %>">
                                <input type="hidden" id="CODE" name="CODE" value="<%= CODE %>">
                                <input type="hidden" id="TALUK" name="TALUK" value="<%= TALUK %>">
                                <input type="hidden" id="HOBLI" name="HOBLI" value="<%= HOBLI %>">
                                <input type="hidden" id="VILLAGE" name="VILLAGE" value="<%= VILLAGE %>">
                                <input type="hidden" id="SURVEYNUMBER" name="SURVEYNUMBER" value="<%= SURVEYNUMBER %>">
                                <input type="hidden" id="pdfname" name="pdfname" value="<%= pdfname %>">
                                <input type="hidden" id="comment" name="comment" value="<%= comment %>">
                                <% row.forEach(function(item){ %>
                                <input type="hidden" id="indexName" name="listName" value="<%= item.listName %>">
                                <% }) %>
                            </div>
                            <div class="text-center m-2">
                                <input type="submit" value="Add Comment" class="btn btn-info btn-block rounded-0"
                                    style="width: 50%; color: white; font-weight: 600; border-radius: 20px;">
                            </div>
                    </form>
                    
                    <% row.forEach(function(item){ %>
            
                        <div class="card-body ">
                            <h1 class="text-center ">
                                <%= item.COMMENT %>
                            </h1>
                        
                    </div>
                    <% }) %>

                    <div class="table-responsive" >
                        <table id="example" class="table table-bordred table-striped text-center mb-5">
                
                          
                                        <tbody>
                
                                            <% row.forEach(function(item){ %>
                                                <tr>
                                                    <td>File Name</td>
                                                    <td>
                                                        <%= item.FILENAME %>
                                                    </td>
                                                </tr>
                                                <tr>
                                                <td>Year</td>
                                                    <td>
                                                        <%= item.YEAR %>
                                                    </td>
                                                </tr>
                                                <tr>
                                                <td>code</td>
                                                    <td>
                                                        <%= item.CODE %>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Taluka</td>
                                                    <td>
                                                        <%= item.TALUK %>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Hobali</td>
                                                    <td>
                                                        <%= item.HOBLI %>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Village</td>
                                                    <td>
                                                        <%= item.VILLAGE %>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Survey Number</td>
                                                    <td>
                                                        <%= item.SURVEYNUMBER %>
                                                    </td>
                                                </tr>
                                                   </tbody>
                                                   </table>
                </div>
              
        
    
       
            </div>
                <% }) %>
                <div class="col-8">
                    <iframe src="../assets/pdf/<%= pdfname %>.pdf" width="100%" height="976" type="application/pdf">
                        <!-- <iframe src="../.." width="100%" height="976" type="application/pdf"> -->
                </div>
                </div>
</body>

</html>